<Window x:Class="GPM.Product.Views.LoaderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPM.Product.Views"
        xmlns:i18n="clr-namespace:GPM.Product.Views.Localization.Loader"
        mc:Ignorable="d"
        Height="120" Width="200" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="{x:Static i18n:LoaderViewLocale.Loading}" Margin="0,50,0,0" HorizontalAlignment="Center" />
            <ProgressBar Minimum="{Binding Path=MinimumProgressBarValue}" Maximum="{Binding Path=MaximumProgressBarValue}" Value="{Binding Path=ProgressBarValue}" SmallChange="{Binding Path=SmallChangeProgressBarValue}" LargeChange="{Binding Path=LargeChangeProgressBarValue}" HorizontalAlignment="Center" Height="20" Width="150" />
        </StackPanel>
    </Grid>
</Window>
